<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
						http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

	<bean class="com.agro360.operation.metadata.FieldMetadataConfig" name="commande/commandeCode">
		<property name="editable">
			<list>
				<ref bean="IsBeanCreateOrUpdateOperation" />
				<ref bean="IsCommandeEditableStatus" />
			</list>
		</property>
		<property name="required">
			<list>
				<ref bean="IsTrue" />
			</list>
		</property>
		<property name="maxLength">
			<list>
				<bean class="com.agro360.operation.metadata.ConstraintConfig">
					<property name="actions">
						<list>
							<bean class="com.agro360.operation.action.common.SetValueAction">
								<constructor-arg value="16" />
							</bean>
						</list>
					</property>
				</bean>
			</list>
		</property>
	</bean>

	<bean class="com.agro360.operation.metadata.FieldMetadataConfig" name="commande/date">
		<property name="editable">
			<list>
				<ref bean="IsBeanCreateOrUpdateOperation" />
				<ref bean="IsCommandeEditableStatus" />
			</list>
		</property>
		<property name="required">
			<list>
				<ref bean="IsTrue" />
			</list>
		</property>
	</bean>

	<bean class="com.agro360.operation.metadata.FieldMetadataConfig" name="commande/status">
		<property name="editable">
			<list>
				<ref bean="IsBeanChangeStatusOperation" />
			</list>
		</property>
		<property name="required">
			<list>
				<ref bean="IsTrue" />
			</list>
		</property>
		<property name="valueOptions">
			<list>
				<bean class="com.agro360.operation.metadata.ConstraintConfig">
					<property name="rules">
						<list>
							<ref bean="IsBeanChangeStatusOperation" />
						</list>
					</property>
					<property name="actions">
						<list>
							<bean class="com.agro360.operation.action.av.commande.FilterStatusAction"/>
						</list>
					</property>
				</bean>
			</list>
		</property>
	</bean>

	<bean class="com.agro360.operation.metadata.FieldMetadataConfig" name="commande/statusDate">
		<property name="editable">
			<list>
				<ref bean="IsBeanChangeStatusOperation" />
			</list>
		</property>
		<property name="required">
			<list>
				<ref bean="IsTrue" />
			</list>
		</property>
	</bean>

	<bean class="com.agro360.operation.metadata.FieldMetadataConfig" name="commande/description">
		<property name="editable">
			<list>
				<ref bean="IsBeanCreateOrUpdateOperation" />
				<ref bean="IsCommandeEditableStatus" />
			</list>
		</property>
		<property name="maxLength">
			<list>
				<bean class="com.agro360.operation.metadata.ConstraintConfig">
					<property name="rules">
						<list>
							<ref bean="IsBeanCreateOrUpdateOperation" />
							<ref bean="IsCommandeEditableStatus" />
						</list>
					</property>
					<property name="actions">
						<list>
							<bean class="com.agro360.operation.action.common.SetValueAction">
								<constructor-arg value="255" />
							</bean>
						</list>
					</property>
				</bean>
			</list>
		</property>
	</bean>

	<bean  class="com.agro360.operation.metadata.FieldMetadataConfig" name="commande/paiementComptant">
		<property name="editable">
			<list>
				<ref bean="IsPaiementCommandeAllowed" />
			</list>
		</property>
		<property name="min">
			<list>
				<bean class="com.agro360.operation.metadata.ConstraintConfig">
					<property name="actions">
						<list>
							<bean class="com.agro360.operation.action.common.SetValueAction">
								<constructor-arg value="0" />
							</bean>
						</list>
					</property>
				</bean>
			</list>
		</property>
	</bean>

	<bean class="com.agro360.operation.metadata.FieldMetadataConfig" name="commande/saveBtn">
		<property name="visible">
			<list>
				<ref bean="IsBeanCreateOrUpdateOperation" />
				<ref bean="IsCommandeEditableStatus" />
			</list>
		</property>
	</bean>

	<bean class="com.agro360.operation.metadata.FieldMetadataConfig" name="commande/createLigneBtn">
		<property name="visible">
			<list>
				<ref bean="IsPaiementCommandeAllowed" />
			</list>
		</property>
	</bean>

	<bean class="com.agro360.operation.metadata.FieldMetadataConfig" name="commande/encaissementBtn">
		<property name="visible">
			<list>
				<ref bean="IsPaiementCommandeAllowed" />
			</list>
		</property>
	</bean>

	<bean class="com.agro360.operation.metadata.FieldMetadataConfig" name="commande/partner.partnerCode">
		<property name="editable">
			<list>				
				<bean class="com.agro360.operation.rule.common.IsOwnerEvalTrueRule">
					<constructor-arg ref="IsBeanCreateOrUpdateOperation"/>
				</bean>
				<bean class="com.agro360.operation.rule.common.IsOwnerEvalTrueRule">
					<constructor-arg ref="IsCommandeEditableStatus"/>
				</bean>
			</list>
		</property>
		<property name="required">
			<list>
				<ref bean="IsTrue" />
			</list>
		</property>
	</bean>

	<bean class="com.agro360.operation.metadata.FieldMetadataConfig" name="commande/magasin.magasinCode">
		<property name="editable">
			<list>
				<bean class="com.agro360.operation.rule.common.IsOwnerEvalTrueRule">
					<constructor-arg ref="IsBeanCreateOrUpdateOperation"/>
				</bean>
				<bean class="com.agro360.operation.rule.common.IsOwnerEvalTrueRule">
					<constructor-arg ref="IsCommandeEditableStatus"/>
				</bean>
			</list>
		</property>
		<property name="required">
			<list>
				<ref bean="IsTrue" />
			</list>
		</property>
	</bean>

	<bean class="com.agro360.operation.metadata.FieldMetadataConfig" name="commande/compte.compteCode">
		<property name="editable">
			<list>				
				<bean class="com.agro360.operation.rule.common.IsOwnerEvalTrueRule">
					<constructor-arg ref="IsPaiementCommandeAllowed"/>
				</bean>
			</list>
		</property>
		<property name="required">
			<list>
				<ref bean="IsTrue" />
			</list>
		</property>
	</bean>

	<bean name="av/commande"  class="com.agro360.operation.metadata.BeanMetadataConfig">
		<property name="editable">
			<list>
			</list>
		</property>
		<property name="fields">
			<map>
				<entry key="commandeCode" value-ref="commande/commandeCode" />
				<entry key="date" value-ref="commande/date" />
				<entry key="status" value-ref="commande/status" />
				<entry key="statusDate" value-ref="commande/statusDate" />
				<entry key="description" value-ref="commande/description" />
				<entry key="paiementComptant" value-ref="commande/paiementComptant" />
				<entry key="createLigneBtn" value-ref="commande/createLigneBtn" />
				<entry key="encaissementBtn" value-ref="commande/encaissementBtn" />
				<entry key="saveBtn" value-ref="commande/saveBtn" />
			</map>
		</property>
		<property name="beans">
			<map>
				<entry key="partner">
					<bean class="com.agro360.operation.metadata.BeanMetadataConfig">
						<property name="fields">
							<map>
								<entry key="partnerCode" value-ref="commande/partner.partnerCode" />
							</map>
						</property>
					</bean>
				</entry>
				<entry key="magasin">
					<bean class="com.agro360.operation.metadata.BeanMetadataConfig">
						<property name="fields">
							<map>
								<entry key="magasinCode" value-ref="commande/magasin.magasinCode" />
							</map>
						</property>
					</bean>
				</entry>
				<entry key="compte">
					<bean class="com.agro360.operation.metadata.BeanMetadataConfig">
						<property name="fields">
							<map>
								<entry key="compteCode" value-ref="commande/compte.compteCode" />
							</map>
						</property>
					</bean>
				</entry>
			</map>
		</property>
		<property name="beanList">
			<map>
				<entry key="lignes" value-ref="av/ligne" />
			</map>
		</property>
		
	</bean>
</beans>