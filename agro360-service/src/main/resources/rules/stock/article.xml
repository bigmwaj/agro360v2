<?xml version="1.0" encoding="UTF-8"?>
<bean-rules xmlns="http://mouafo.com/xml"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://mouafo.com/xml ./../bean-init-rules.xsd"
	namespace="default">
	
	<editableContraints>
		<constraint>
			<rule class="com.agro360.service.rule.constraint.common.IsEditableBean"/>
		</constraint>
	</editableContraints> 
	
	<bean name="unite">
		<field name="uniteCode" required="true">
			<editableContraints>
				<constraint>
					<rule class="com.agro360.service.rule.constraint.common.IsCreateAction"/>
				</constraint>
			</editableContraints>
		</field>
		<field name="description" editable="false"/>
	</bean>
		
	<beanList name="variants">			
		<field name="variantCode" required="true">
			<editableContraints>
				<constraint>
					<rule class="com.agro360.service.rule.constraint.common.IsCreateAction"/>
				</constraint>
			</editableContraints>		
		</field>
		
		<field name="description">
			<editableContraints>
				<constraint>
					<rule class="com.agro360.service.rule.constraint.common.IsCreateOrEditAction"/>
				</constraint>
			</editableContraints>		
		</field>		
	</beanList>
		
	<beanList name="conversions">		
		<bean name="unite">
			<field name="uniteCode" required="true">
				<validationContraints>
					<constraint>
						<!-- sur l'article est CREATE ou UPDATE -->
						<rule class="com.agro360.service.rule.constraint.common.IsCreateOrEditAction" />
						<!-- L'action sur la conversion est CREATE -->
						<rule 
							class="com.agro360.service.rule.constraint.common.IsCreateAction" 
							lookupClass="com.agro360.service.rule.lookup.common.SelfBeanLookup"/>
						
					</constraint>
					<!-- La conversion doit Ãªtre unique -->
					<validator 
						class="com.agro360.service.rule.validation.stock.article.conversion.UniqueValidator" 
						lookupClass="com.agro360.service.rule.lookup.common.SelfBeanLookup"/>
				</validationContraints>
				
				<editableContraints>		
					<constraint>
						<rule class="com.agro360.service.rule.constraint.common.IsCreateAction"/>
					</constraint>
				</editableContraints>
				
			</field>
			<field name="description" editable="false"/>
		</bean>
		<field name="facteur" required="true" min="0">
			<editableContraints>
				<constraint>
					<rule class="com.agro360.service.rule.constraint.common.IsCreateAction"/>
				</constraint>
			</editableContraints>		
		</field>
	</beanList>
	
	<field name="articleCode" required="true">
		<editableContraints>
			<constraint>
				<rule class="com.agro360.service.rule.constraint.common.IsCreateAction"/>
			</constraint>
		</editableContraints>
	</field>
	
	<field name="description">
		<editableContraints>
			<constraint>
				<rule class="com.agro360.service.rule.constraint.common.IsCreateOrEditAction"/>
			</constraint>
		</editableContraints>
	</field>
	
	<field name="typeArticle" required="true">
		<editableContraints>
			<constraint>
				<rule class="com.agro360.service.rule.constraint.common.IsCreateAction"/>
			</constraint>
		</editableContraints>
	</field>
</bean-rules>