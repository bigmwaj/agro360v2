<?xml version="1.0" encoding="UTF-8"?>
<bean-rules xmlns="http://mouafo.com/xml"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://mouafo.com/xml ./../bean-rules.xsd"
	namespace="default">
	
	<editable>
		<constraint>
			<rule name="com.agro360.service.rule.common.IsEditableBean"/>
		</constraint>
	</editable>
	
	<bean name="article">
		<field name="articleCode" required="true">
			<editable>
				<constraint>
					<rule 
						name="com.agro360.service.rule.common.IsCreateAction" 
						beanLookup="com.agro360.service.rule.common.MainBeanLookup"/>
				</constraint>
			</editable>
		</field>
	</bean>	
	
	<bean name="unite">
		<field name="uniteCode" required="true">
			<editable>
				<constraint>
					<rule 
						name="com.agro360.service.rule.common.IsCreateAction" 
						beanLookup="com.agro360.service.rule.common.MainBeanLookup"/>
				</constraint>
			</editable>
		</field>	
	</bean>
	
	<field name="ligneId" required="true">
		<editable>
			<constraint>
				<rule 
					name="com.agro360.service.rule.common.IsCreateAction" 
					beanLookup="com.agro360.service.bean.common.MainBeanLookup"/>
			</constraint>
		</editable>
	</field>
	
	<field name="numero" required="true">
		<editable>
			<constraint>
				<rule 
					name="com.agro360.service.rule.common.IsStatusChangeAction" 
					beanLookup="com.agro360.service.bean.common.MainBeanLookup"/>
			</constraint>
		</editable>
	</field>
	
	<field name="typeLigne">
		<editable>
			<constraint>
				<rule 
					name="com.agro360.service.rule.common.IsStatusChangeAction" 
					beanLookup="com.agro360.service.bean.common.MainBeanLookup"/>
			</constraint>
		</editable>
	</field>
	
	<field name="description">
		<editable>
			<constraint>
				<rule 
					name="com.agro360.service.rule.common.IsStatusChangeAction" 
					beanLookup="com.agro360.service.bean.common.MainBeanLookup"/>
			</constraint>
		</editable>
	</field>
	
	<field name="quantite">
		<editable>
			<constraint>
				<rule 
					name="com.agro360.service.rule.common.IsStatusChangeAction" 
					beanLookup="com.agro360.service.bean.common.MainBeanLookup"/>
			</constraint>
		</editable>
	</field>
	
	<field name="prixUnitaire">
		<editable>
			<constraint>
				<rule 
					name="com.agro360.service.rule.common.IsStatusChangeAction" 
					beanLookup="com.agro360.service.bean.common.MainBeanLookup"/>
			</constraint>
		</editable>
	</field>
	
	<field name="prixTotal" editable="false">
	</field>
	
	<field name="variantCode">
		<editable>
			<constraint>
				<rule 
					name="com.agro360.service.rule.common.IsStatusChangeAction" 
					beanLookup="com.agro360.service.bean.common.MainBeanLookup"/>
			</constraint>
		</editable>
	</field>
</bean-rules>